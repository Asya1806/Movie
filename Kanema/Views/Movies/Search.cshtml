@model IEnumerable<Kanema.Models.Movies.Movie>

<div id="search results">
    @if (Model.Count() == 0)
    {
        <p>К сожалению фильмы не были найдены.</p>
    }
    else
    {
        @foreach (var movie in Model)
        {
            <div>
                <a href="Movies?id=@movie.Id">
                    <div><img src="~/img/@movie.Img" width="100" height="100" /></div>
                    <div>@movie.Name</div>
                    <div>@movie.Year</div>
                    <div>@movie.Country</div>
                    <div>@movie.Producer</div>
                    <div>@movie.Genre</div>
                    <div>@movie.Annotation</div>
                </a>
            </div>
        }
    }
</div>