@model Kanema.Models.Movies.Movie

<div class="well">
    <h3>
        <strong>@Model.Name</strong>
        <span class="pull-right label label-primary">@Model.Year.ToString("# лет")</span>
    </h3>
    @using (Html.BeginForm("AddToBookmark", "Bookmark"))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.Id)
            @*@Html.Hidden("returnUrl", Request.Url.PathAndQuery)*@
            <input type="submit" class="btn btn-success" value="Добавить в корзину" />
        </div>
    }
    <span class="lead">@Model.Annotation</span>
</div>